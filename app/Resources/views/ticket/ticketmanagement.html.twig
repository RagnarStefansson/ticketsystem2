{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-xs-12">
            <a class="btn btn-sm btn-default" href="{{ path('createticket') }}"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Neues Ticket</a>
        </div>

        <div class="col-xs-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Ticket-ID</th>
                    <th>Kunde</th>
                    <th>Titel</th>
                    <th>Verantwortlicher</th>
                </tr>
            </thead>
            <tbody>
            {% for ticket in tickets %}
                <tr class='clickable-row' data-href='{{ path('showTicket', {'tid': ticket.tid}) }}'>
                    <td>{{ ticket.tid }}</td>
                    <td>{{ getCustomerName(ticket.kid) }}</td>
                    <td>{{ ticket.titel }}</td>
                    <td>{{ getResponsibleName(ticket.uid) }}</td>
                </tr>
            {% endfor %}
            </tbody>

        </table>
        </div>
    </div>

    <script type="text/javascript">
        jQuery(document).ready(function($) {
            $(".clickable-row").click(function() {
                window.location = $(this).data("href");
            });
        });
    </script>
{% endblock %}