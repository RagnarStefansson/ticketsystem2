{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-xs-12">
            <a class="btn btn-sm btn-default" href="{{ path('createcustomer') }}"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Neuer Kunde</a>
        </div>

        <div class="col-xs-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Kunde</th>
                    <th>Adresse</th>
                    <th>Telefon</th>
                    <th>Mail</th>
                    <th>Vertrag</th>
                </tr>
            </thead>
            <tbody>
            {% for customer in customers %}
                <tr class='clickable-row' data-href='{{ path('showCustomer', {'kid': customer.kid}) }}'>
                    <td>{{ customer.name }}</td>
                    <td>{{ customer.adress.street }} {{ customer.adress.number }}, {{ customer.adress.zipcode }} {{ customer.adress.city }}</td>
                    <td>{{ customer.phone }}</td>
                    <td>{{ customer.mail }}</td>
                    <td>{{ getContractName(customer.vid) }}</td>
                </tr>
            {% endfor %}
            </tbody>

        </table>
        </div>
    </div>
{% endblock %}